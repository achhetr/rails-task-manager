<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <input type="checkbox" name="checkbox" <%= "checked" if task.completed %> >
      <%= link_to task_path(task.id) do %>
        <label><%= task.title %></label>
      <% end %>
      <div class="btn">
        <%= link_to 'Delete', delete_task_path(task.id), :method => 'delete'%>
      </div>
      
    </li>
  <% end %>
</ul>
<%= link_to 'Add new task', create_task_form_path %>